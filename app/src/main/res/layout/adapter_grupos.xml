<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@android:color/transparent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgGrupos"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="#e1e1e1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/nombreGrupo"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:text="gunar ortiz"
                    android:textColor="#222222"
                    android:textSize="14dp" />


                <Button
                    android:id="@+id/botonAddGrupo"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/rounded_edittext"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="Add"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/esMiembro"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:background="@drawable/botonredondo"
                    android:gravity="center"
                    android:text="/"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/descripcionGrupo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inicia la conversacion"
                android:textColor="#666666"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>