<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:focusableInTouchMode="true"
    android:gravity="center" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/mover"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                 android:layout_marginBottom="45dp"
                android:src="@drawable/logo2" />

            <LinearLayout
                android:id="@+id/IngresoOcultar"
                style="@style/redondeadoBlanco"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
               
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp"
                android:visibility="gone" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="Roboto"
                    android:text="Ingresa"
                    android:textColor="#FF7321"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/nombreIngreso"
                    android:text="admin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:background="#efefef"
                    android:ems="10"
                    android:fontFamily="Roboto"
                    android:hint="Nombre"
                    android:padding="8dp"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal" >

                    <EditText
                        android:text="admin"
                        android:id="@+id/passIngreso"
                        android:layout_width="149dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="#efefef"
                        android:ems="10"
                        android:fontFamily="Roboto"
                        android:hint="Contraseña"
                        android:inputType="textPassword"
                        android:padding="8dp"
                        android:textSize="14dp" />

                    <Button
                        android:id="@+id/button1"
                        style="@style/boton2"
                        android:layout_width="76dp"
                        android:onClick="entrar"
                        android:text="Entrar" />
                </LinearLayout>

                <TextView
                    android:id="@+id/DatosIncorrectosText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:fontFamily="Roboto"
                    android:gravity="center"
                    android:text="Datos incorrectos!"
                    android:textColor="#ff1f1f"
                    android:textSize="13dp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="Roboto"
                    android:text="Si no tienes cuenta..."
                    android:textColor="#FF7321"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/button2"
                    style="@style/boton"
                    android:layout_width="105dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="13dp"
                    android:onClick="ocultar"
                    android:text="Registrate!" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/RegistroOcultar"
                style="@style/redondeadoBlanco"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp"
                android:visibility="gone"
                android:layout_marginTop="290dp"
                
                 >

                <TextView
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="Roboto"
                    android:text="Registrate"
                    android:textColor="#FF7321"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/nombreReg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:background="#efefef"
                    android:ems="10"
                    android:fontFamily="Roboto"
                    android:hint="Nombre"
                    android:padding="8dp"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/nombreIncorrectoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="Roboto"
                    android:gravity="center"
                    android:text="Ese nombre ya esta siendo usado"
                    android:textColor="#ff1f1f"
                    android:textSize="13dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/nombreCorrectoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="Roboto"
                    android:gravity="center"
                    android:text="Nombre disponible"
                    android:textColor="#09b900"
                    android:textSize="13dp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/correoReg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#efefef"
                    android:ems="10"
                    android:fontFamily="Roboto"
                    android:hint="Correo electronico"
                    android:padding="8dp"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/passReg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#efefef"
                    android:ems="10"
                    android:fontFamily="Roboto"
                    android:hint="Contraseña"
                    android:padding="8dp"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/passRepReg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#efefef"
                    android:ems="10"
                    android:fontFamily="Roboto"
                    android:hint="Confirma tu contraseña"
                    android:padding="8dp"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/passIncorrectosText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="Roboto"
                    android:gravity="center"
                    android:text="Las contraseñas no son iguales"
                    android:textColor="#ff1f1f"
                    android:textSize="13dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/passCorrectosText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="Roboto"
                    android:gravity="center"
                    android:text="Las contraseñas son iguales"
                    android:textColor="#09b900"
                    android:textSize="13dp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:fontFamily="Roboto"
                    android:text="Selecciona una foto de perfil"
                    android:textColor="#FF7321"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/image0"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="4dp"
                        android:background="#e1e1e1" />

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/image1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="4dp"
                                android:onClick="img1"
                                android:src="@drawable/perfil1" />

                            <ImageView
                                android:id="@+id/image2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="img2"
                                android:src="@drawable/perfil2" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            
                            android:gravity="center_horizontal"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/image3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="4dp"
                                android:onClick="img3"
                                android:src="@drawable/perfil3" />

                            <ImageView
                                android:id="@+id/image4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="img4"
                                android:src="@drawable/perfil4" />
                        </LinearLayout>
                        
                        

                        
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            
                            android:gravity="center_horizontal"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/image5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="4dp"
                                android:onClick="img5"
                                android:src="@drawable/perfil5" />

                            <ImageView
                                android:id="@+id/image6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="4dp"
                                android:onClick="img6"
                                android:src="@drawable/perfil6" />

                            <ImageView
                                android:id="@+id/image7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="4dp"
                                android:onClick="img7"
                                android:src="@drawable/perfil7" />

                            <ImageView
                                android:id="@+id/image8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="img8"
                                android:src="@drawable/perfil8" />
                        </LinearLayout>

                <Button
                    android:id="@+id/registrar"
                    style="@style/boton"
                    android:layout_width="105dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="13dp"
                    
                    android:onClick="registrar"
                    android:text="Registrate!" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>